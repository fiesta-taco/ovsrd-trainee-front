{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": ["eslint:recommended", "plugin:vue/recommended"],
    "parserOptions": {
        "ecmaVersion": 2020,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
    },
    "rules": {
        "indent": ["warn", 4],
        "quotes": ["warn", "single"],
        "semi": ["warn", "always"],
        "no-unused-vars": "off",
        "vue/html-indent": ["warn", 4],
        "vue/script-indent": ["warn", 4, { "switchCase": 1 }], 
        "comma-dangle": ["warn", "always-multiline"]
    }
}
